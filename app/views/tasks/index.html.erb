
<div class="container mt-4">
  <h1 class="mb-4">To-Do List</h1>


  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Completed</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td>
            <%= task.completed ? '✅' : '❌' %>
          </td>
          <td>
            <%= link_to 'Show', task, class: 'btn btn-info btn-sm' %>
            <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Delete', task, method: :delete, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
