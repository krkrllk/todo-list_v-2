<h1>To-Do List</h1>

<%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Task</th>
      <th>Completed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td>
          <strong><%= task.title %></strong>
          <% if task.sub_tasks.any? %>
            <ul>
              <% task.sub_tasks.each do |sub_task| %>
                <li>
                  <%= sub_task.title %> - <%= sub_task.completed ? '✔️' : '❌' %>
                </li>
              <% end %>
            </ul>
          <% end %>
        </td>
        <td><%= task.completed ? '✔️' : '❌' %></td>
        <td>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
