<div class="container mt-4">
  <h1>New Task</h1>

  <%= form_with model: @task, local: true do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Enter task title' %>
    </div>
    <div class="form-check mt-3">
      <%= form.check_box :completed, class: 'form-check-input' %>
      <%= form.label :completed, class: 'form-check-label' %>
    </div>
    <div class="mt-3">
      <%= form.submit 'Create Task', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
